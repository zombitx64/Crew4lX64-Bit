{
  "name": "crawl4ai-web",
  "version": "1.0.0",
  "description": "Web interface for Crawl4AI",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"uvicorn crawl4ai.main:app --reload\"",
    "build:css": "tailwindcss -i ./input.css -o ./static/output.css",
    "watch:css": "tailwindcss -i ./input.css -o ./static/output.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17"
  }
}
